@model Meyawo.Models.TblProject
@{
    ViewBag.Title = "CreateProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Proje Girişi</h2>

<form method="post">

    <label>Proje Başlığı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control border" })
    <br />
    <label>Proje Görsel Linki</label>
    <input type="text" name="ImageUrl" class="form-control border" />
    <br />
    <label>GitHub Linki</label>
    <input type="text" name="ProjectUrl" class="form-control border" />
    <br />
    <label>Proje Kategorisi</label>
    @Html.DropDownListFor(x => x.ProjectCategory, (List<SelectListItem>)ViewBag.v, new { @class = "form-control border" })
    <br />
    <label>Açıklama</label>
    <textarea rows="5" name="Description" class="table table-bordered"></textarea>
    <br />
    <button class="btn btn-info">Projeyi Kaydet</button>
    <a href="/Project/Index" class="btn btn-outline-dark">Geri</a>

</form>
