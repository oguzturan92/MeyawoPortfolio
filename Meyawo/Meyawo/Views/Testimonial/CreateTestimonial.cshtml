@model Meyawo.Models.TblTestimonial
@{
    ViewBag.Title = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Referans Ekle</h2>

<form method="post">

    <label>Ad Soyad</label>
    <input type="text" name="NameSurname" class="form-control border" />
    <br />
    <label>Image Url</label>
    <input type="text" name="ImageUrl" class="form-control border" />
    <br />
    <label>Status</label>
    <select name="Status" class="form-control border">
        <option value="True">Aktif</option>
        <option value="False">Pasif</option>
    </select>
    <br />
    <label>Açıklama</label>
    <textarea rows="4" class="table table-bordered" name="Description"></textarea>
    <br />
    <button class="btn btn-info">Referans Ekle</button>
    <a href="/Testimonial/Index" class="btn btn-outline-dark">Geri</a>

</form>