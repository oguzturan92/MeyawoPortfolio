@model Meyawo.Models.TblService
@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Hizmet Güncelle</h2>

<form method="post">

    <label>Hizmet ID</label>
    <input type="text" name="ServiceId" class="form-control border" value="@Model.ServiceID" disabled />
    <input type="hidden" name="ServiceId" value="@Model.ServiceID" />
    <br />
    <label>Hizmet Başlığı</label>
    <input type="text" name="Title" class="form-control border" value="@Model.Title" />
    <br />
    <label>Hizmet Görseli</label>
    <input type="text" name="ImageUrl" class="form-control border" value="@Model.ImageUrl" />
    <br />
    <label>Hizmet Açıklaması</label>
    <textarea rows="4" class="table table-bordered" name="Description">@Model.Description</textarea>
    <br />
    <button class="btn btn-info">Hizmeti Güncelle</button>
    <a href="/Service/Index" class="btn btn-outline-dark">Geri</a>

</form>