
<section class="section" id="contact">
    <div class="container text-center">
        <p class="section-subtitle">Nasıl Yardımcı Olabilirim ?</p>
        <h6 class="section-title mb-5">İletişime Geç</h6>

        <form action="ContactCreate" method="post" class="contact-form col-md-10 col-lg-8 m-auto">
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <input type="text" size="50" class="form-control" placeholder="Adınız Soyadınız" required name="nameSurname">
                </div>
                <div class="form-group col-sm-6">
                    <input type="email" class="form-control" placeholder="Email Adresiniz" requried name="email">
                </div>
                <div class="form-group col-sm-12">
                    <textarea name="msg" id="comment" rows="6" class="form-control"
                              placeholder="Mesajınız"></textarea>
                </div>
                <div class="form-group col-sm-12 mt-3">
                    <button class="btn btn-outline-primary rounded">Gönder</button>
                </div>
            </div>
        </form>
    </div>
</section>